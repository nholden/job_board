<% option = model.to_s.downcase %>
<%= form_for :option, url: {action: "update_#{option}s"}, html: {method: "put"} do |f| %>
  <div class="title">
    <h1><%= option.capitalize %>s</h1>
  </div>
  <div class="options">
  <% model.all.each do |option| %>
    <div class="existing">
      <div class="delete">
        <%= link_to "[X]", '' %>
      </div>
      <div class="option">
        <div class="view-option">
          <%= option.label %> <%= link_to "(Edit)", '' %>
        </div>
        <div class="edit-option">
          <%= text_field_tag option, option.label %>
        </div>
      </div>
    </div>
  <% end %>
  <% (10 - model.count).times do %>
    <div class="new">
      <div class="delete">
        <%= link_to "[X]", '' %>
      </div>
      <div class="option">
        <div class="new-option">
          <%= text_field_tag "new_#{option}s[]", nil, placeholder: "New #{option}" %>

        </div>
      </div>
    </div>
  <% end %>
  </div>
  <div class="button">
    <%= submit_tag("Save #{option}s") %><br /><br />
  </div>
<% end %>
