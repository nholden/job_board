<table>
  <tr>
    <th>User</th>
    <th>Role</th>
    <th>Email</th>
    <th>Number of jobs</th>
  </tr>
  <% @users.each do |user| %>
    <tr>  
      <td>
        <%= user.name %>
        <%= link_to "(Edit)", edit_user_path(user) %>
        <%= link_to "(Delete)", user, method: :delete, data: { confirm:
          "Are you sure you want to delete this user?" } %>
      </td>
      <td><%= user.role.label %></td>
      <td><%= user.email %></td>
      <td><%= user.jobs.count %></td>
    </tr>
  <% end %>
  <tr>
    <td colspan=4><%= link_to "Create new user", new_user_path, method: :get %></td>
  </tr>
</table>
