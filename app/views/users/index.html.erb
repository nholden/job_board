<table>
  <tr>
    <th>User</th>
    <th>Role</th>
    <th>Email</th>
    <th>Number of jobs</th>
  </tr>
  <% @users.each do |user| %>
    <tr>  
      <td>
        <%= user.name %>
        <%= link_to "(Edit)", edit_user_path(user) %>
        <%= link_to "(Delete)", user, method: :delete, data: { confirm:
          "Are you sure you want to delete this user?" } %>
      </td>
      <td><%= user.role.label %></td>
      <td><%= user.email %></td>
      <td><%= user.jobs.count %></td>
    </tr>
  <% end %>
</table>

<div class="new_links">
  <div class="link">
    <a href="<%= signup_applicant_path %>"><i class='fa fa-user'></i> Create new applicant</a>
  </div>
  <div class="link">
    <a href="<%= signup_employer_path %>"><i class='fa fa-building'></i> Create new employer</a>
  </div>
  <div class="link">
    <a href="<%= signup_admin_path %>"><i class='fa fa-cogs'></i> Create new admin</a>
  </div>
</div>
