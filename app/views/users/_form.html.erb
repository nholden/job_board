<%= form_for user do |f| %>
  <div class="form">
    <div class="title">
      <h1><%= title_label%> 
    <% if is_admin? %>new
    <% elsif admin_exists? %>employer
    <% else %>administrator<% end %> 
    profile</h1>
    </div>
    <div class="field">
      <%= label_tag(:name, "Company name:") %>
      <%= f.text_field :name %><br />
    </div>
    <div class="field">
      <%= label_tag(:website, "Company website:") %>
      <%= f.text_field :website %><br />
    </div>
    <div class="field">
      <%= label_tag(:email, "Email:") %>
      <%= f.text_field :email %><br />
    </div>
    <div class="field">
      <%= label_tag(:password, "Password:") %>
      <%= f.password_field :password  %><br />
    </div>
    <div class="field">
      <%= label_tag(:password_confirmation, "Confirm:") %>
      <%= f.password_field :password_confirmation %><br />
    </div>
    <% if is_admin? %>
      <div class="field">
        <%= label_tag(:role, "User role:") %>
        <%= f.collection_select(:role_id, Role.all, :id, :label) %>
      </div>
    <% end %>
    <div class="trigger">
      <%= submit_tag(submit_label) %>
    </div>
  </div>
<% end %>
